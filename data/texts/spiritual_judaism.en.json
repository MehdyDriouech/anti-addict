{
  "cards": [
    {
      "id": "juda_en_001",
      "theme": "lower_gaze",
      "addiction": "porn",
      "text": "Do not follow your heart and your eyes, which lead you astray.",
      "ref": "Numbers 15:39",
      "lang": "en"
    },
    {
      "id": "juda_en_002",
      "theme": "lower_gaze",
      "addiction": "porn",
      "text": "I made a covenant with my eyes: how then could I gaze at a young woman?",
      "ref": "Job 31:1",
      "lang": "en"
    },
    {
      "id": "juda_en_003",
      "theme": "avoid_paths",
      "addiction": "porn",
      "text": "Turn away from evil and do good. Seek peace and pursue it.",
      "ref": "Psalms 34:15",
      "lang": "en"
    },
    {
      "id": "juda_en_004",
      "theme": "avoid_paths",
      "addiction": "any",
      "text": "Guard yourself from all evil. Purity leads to holiness.",
      "ref": "Talmud, Avodah Zarah 20b",
      "lang": "en"
    },
    {
      "id": "juda_en_005",
      "theme": "repentance",
      "addiction": "any",
      "text": "Even if a sharp sword is placed on your neck, do not abandon hope for divine mercy.",
      "ref": "Talmud, Berakhot 10a",
      "lang": "en"
    },
    {
      "id": "juda_en_006",
      "theme": "repentance",
      "addiction": "any",
      "text": "Repent one day before your death. Since you don't know that day, repent every day.",
      "ref": "Pirkei Avot 2:10",
      "lang": "en"
    },
    {
      "id": "juda_en_007",
      "theme": "repentance",
      "addiction": "any",
      "text": "Great is teshuvah (repentance), for it reaches the Throne of Glory.",
      "ref": "Talmud, Yoma 86a",
      "lang": "en"
    },
    {
      "id": "juda_en_008",
      "theme": "hope",
      "addiction": "any",
      "text": "The Lord is close to the brokenhearted. He saves those crushed in spirit.",
      "ref": "Psalms 34:19",
      "lang": "en"
    },
    {
      "id": "juda_en_009",
      "theme": "hope",
      "addiction": "any",
      "text": "For I know the plans I have for you: plans for peace and not for harm.",
      "ref": "Jeremiah 29:11",
      "lang": "en"
    },
    {
      "id": "juda_en_010",
      "theme": "hope",
      "addiction": "any",
      "text": "The Lord is my light and my salvation. Whom shall I fear?",
      "ref": "Psalms 27:1",
      "lang": "en"
    },
    {
      "id": "juda_en_011",
      "theme": "discipline",
      "addiction": "any",
      "text": "Who is mighty? One who conquers their inclination.",
      "ref": "Pirkei Avot 4:1",
      "lang": "en"
    },
    {
      "id": "juda_en_012",
      "theme": "discipline",
      "addiction": "any",
      "text": "In all your ways acknowledge Him, and He will direct your paths.",
      "ref": "Proverbs 3:6",
      "lang": "en"
    },
    {
      "id": "juda_en_013",
      "theme": "patience",
      "addiction": "any",
      "text": "One who is slow to anger is better than a hero. One who rules their spirit is better than a conqueror.",
      "ref": "Proverbs 16:32",
      "lang": "en"
    },
    {
      "id": "juda_en_014",
      "theme": "patience",
      "addiction": "any",
      "text": "In quietness and trust shall be your strength.",
      "ref": "Isaiah 30:15",
      "lang": "en"
    },
    {
      "id": "juda_en_015",
      "theme": "repentance",
      "addiction": "any",
      "text": "In the place where the penitent stand, even the completely righteous cannot stand.",
      "ref": "Talmud, Berakhot 34b",
      "lang": "en"
    },
    {
      "id": "juda_en_016",
      "theme": "hope",
      "addiction": "any",
      "text": "Though I sit in darkness, the Lord is my light.",
      "ref": "Micah 7:8",
      "lang": "en"
    },
    {
      "id": "juda_en_017",
      "theme": "discipline",
      "addiction": "any",
      "text": "Create in me a pure heart, O God, and renew a steadfast spirit within me.",
      "ref": "Psalms 51:12",
      "lang": "en"
    },
    {
      "id": "juda_en_018",
      "theme": "lower_gaze",
      "addiction": "porn",
      "text": "The eyes of man are never satisfied. Learn to master them.",
      "ref": "Proverbs 27:20",
      "lang": "en"
    },
    {
      "id": "juda_en_019",
      "theme": "avoid_paths",
      "addiction": "any",
      "text": "Remove from me the way of falsehood. Grant me the grace of Your Torah.",
      "ref": "Psalms 119:29",
      "lang": "en"
    },
    {
      "id": "juda_en_020",
      "theme": "hope",
      "addiction": "any",
      "text": "I lift my eyes to the mountains. From where will my help come? My help comes from the Lord.",
      "ref": "Psalms 121:1-2",
      "lang": "en"
    },
    {
      "id": "juda_en_021",
      "theme": "discipline",
      "addiction": "any",
      "text": "It is not your duty to finish the work, but you are not free to desist from it.",
      "ref": "Pirkei Avot 2:16",
      "lang": "en"
    },
    {
      "id": "juda_en_022",
      "theme": "patience",
      "addiction": "any",
      "text": "The Lord will fight for you; you need only to be still.",
      "ref": "Exodus 14:14",
      "lang": "en"
    },
    {
      "id": "juda_en_023",
      "theme": "repentance",
      "addiction": "any",
      "text": "Though your sins are like scarlet, they shall be white as snow.",
      "ref": "Isaiah 1:18",
      "lang": "en"
    },
    {
      "id": "juda_en_024",
      "theme": "hope",
      "addiction": "any",
      "text": "I have called you by name, you are mine. When you pass through the waters, I will be with you.",
      "ref": "Isaiah 43:1-2",
      "lang": "en"
    },
    {
      "id": "juda_en_025",
      "theme": "discipline",
      "addiction": "any",
      "text": "Sanctify yourself with what is permitted to you. Moderation leads to holiness.",
      "ref": "Talmud, Yevamot 20a",
      "lang": "en"
    },
    {
      "id": "juda_en_026",
      "theme": "lower_gaze",
      "addiction": "porn",
      "text": "Guard your heart above all else, for from it flow the springs of life.",
      "ref": "Proverbs 4:23",
      "lang": "en"
    },
    {
      "id": "juda_en_027",
      "theme": "patience",
      "addiction": "any",
      "text": "Wait for the Lord; be strong and let your heart take courage. Wait for the Lord!",
      "ref": "Psalms 27:14",
      "lang": "en"
    },
    {
      "id": "juda_en_028",
      "theme": "avoid_paths",
      "addiction": "any",
      "text": "The prudent sees danger and hides. The simple go on and are punished.",
      "ref": "Proverbs 22:3",
      "lang": "en"
    },
    {
      "id": "juda_en_029",
      "theme": "hope",
      "addiction": "any",
      "text": "The whole world is a very narrow bridge. The main thing is not to be afraid.",
      "ref": "Rabbi Nachman of Breslov",
      "lang": "en"
    },
    {
      "id": "juda_en_030",
      "theme": "repentance",
      "addiction": "any",
      "text": "Return, O Israel, to the Lord your God. For you have stumbled in your iniquity.",
      "ref": "Hosea 14:2",
      "lang": "en"
    }
  ]
}
